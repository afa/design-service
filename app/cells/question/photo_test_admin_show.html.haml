%div{:style => 'font-size: 20px; margin: 21px 0 10px 10px;'}
  = @question_data.name
%table{:width => '100%', :border => '0', :cellspacing => '0', :cellpadding => '0'}
  %tr
    %th Изображение
    %th Ответ пользователя
    %th Правильный

  - @question_data.question_fields.each do |value|
    %tr
      %td
        - unless value.get_photo.nil?
          %img{:src => value.get_photo.file.url, :style => 'width: 200px; height: 100px;'}
        - else
          нет фото
      %td
        - if @data_field.value.to_i == value.id
          выбрал
      %td
        - if value.statis_is_true
          правильный