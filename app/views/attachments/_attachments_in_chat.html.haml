- unless attachments.empty?
  %span.heading_done.dark_green_header Выполнено
  %ul.done
    - attachments.each_with_index do |attachment, index|
      %li
        %span>
          /= image_tag attachment_path(attachment)
        = link_to download_attachment_path(attachment) do
          - if attachment.kind && !attachment.kind.blank?
            = I18n.t "attachment_kinds.#{attachment.kind}"
          - else
            = precede "План " do
              = index + 1
- unless unfinished_attachments.empty? == 0
  %span.heading_working.dark_red В разработке
  %ul.working
    - unfinished_attachments.each do |kind|
      %li
        %span>
        = I18n.t "attachment_kinds.#{kind}"
        - if current_user.specialist?
          = render partial: 'attachments/attachment_form', locals:{attachment: attachments.build(kind: kind)}
