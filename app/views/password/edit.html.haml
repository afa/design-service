= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  #forgot_password.rounded-corners.border_x4.shadow_x1{:style => "display:block;"}
    .head_recover
    = f.error_notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .info= I18n.t :new_password
    .text_fields
      %input.password.required#user_password{:autofocus => true, :name => "user[password]", :type => 'password', :size => '33'}
    .info= I18n.t :confirm_new_password
    .text_fields
      %input.password.required#user_password_confirmation{:name => "user[password_confirmation]", :type => 'password', :size => '33'}
    .control.ok_button
      %input.not_ajax.submit{:type => 'image', :src => asset_path('ok_button.png'), :alt => "Отправить форму"}
-# = render "devise/shared/links"
