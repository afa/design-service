= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  #forgot_password.rounded-corners.border_x4.shadow_x1{:style => "display: block;"}
    .head_recover
    .info
      E-mail
    .text_fields
      %span= f.input_field :email, class: 'textlines_default textline_l7'
    .clear
    .control.ok_button
      %input.not_ajax.submit{:type => 'image', :src => asset_path('ok_button.png'), :alt => "Отправить форму"}
