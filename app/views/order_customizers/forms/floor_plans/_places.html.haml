= orderable_form.fields_for :floor_plans do |f|
  .room_blocks
    .place
      Помещение
      = f.input_field :room, class: 'textlines_default textline_l6-5'
      /%input.textlines_default.textline_l6-5{:name => "room_block1plojad", :onblur => "if($(this).val()==''){$(this).val('например, Кухня'); $(this).css('color','#999999')}; return false;", :onfocus => "if($(this).val()=='например, Кухня'){$(this).val(''); $(this).css('color','#000000')}; return false;", :style => "color:#999999", :type => "text", :value => "например, Кухня"}
    %ul.border_x6.rounded-corners_l3
      %li
        = f.input_field :artificial_cold, class: 'room_block1option1'
        = f.label :artificial_cold, 'Искусственных холодных'
          
      %li
        = f.input_field :artificial_warm, class: 'room_block1option2'
        = f.label :artificial_warm, 'Искусственных теплых'
          
      %li
        = f.input_field :carpet_or_printed_carpet, class: 'room_block1option3'
        = f.label :carpet_or_printed_carpet, 'Ковролин или набивной рисунок ковра'        
          
      %li
        = f.input_field :stone, class: 'room_block1option4'
        = f.label :stone, 'Камень'

      %li
        = f.input_field :tree, class: 'room_block1option5'
        = f.label :tree, 'Дерево'

