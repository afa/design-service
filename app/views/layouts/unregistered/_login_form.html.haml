= simple_form_for(@user ||= User.new, as: :user, :url => session_path(:user), html: {class: 'login_form'}) do |f|
  - if params[:controller] == 'devise/sessions'
    .head_none
  - else
    .head_login
    .goto_register
  .info Логин или E-mail :
  .text_fields= f.input_field :login
  .info Пароль :
  .text_fields= f.input_field :password
  .control
    %span
      - if devise_mapping.recoverable? && controller_name != 'passwords'
        = link_to "Забыли?", new_password_path(:user)
    %input.login_button{:alt => "Submit Form", :src => asset_path("ok_button_green.png"), :type => "image"}
