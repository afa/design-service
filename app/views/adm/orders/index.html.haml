/Header
= render partial: 'adm/menu/header'

/Container
%div{:id => 'container'}
  %div{:class => 'shell'}

    %div{:class => 'small-nav'}
      = link_to 'Админ-панель', 'orders'
      %span &gt;
      Заказы
    
    /Message OK
    %div{:class => 'msg msg-ok'}
      %p
        %strong Your file was uploaded succesifully!
      %a{:class => 'close', :href => '#'}
    
    /Message Error
    %div{:class => 'msg msg-error'}
      %p
        %strong You must select a file to upload first!
      %a{:class => 'close', :href => '#'}

    %br

    /Main
    %div{:id => 'main'}
      %div{:class => 'cl'} &nbsp;
      
      /Content
      %div{:id => 'content', :style => 'width: 100%;'}
        
        /Box
        %div{:class => 'box'}

          /Box Head
          %div{:class => 'box-head'}
            %h2{:class => 'left'} Эта карочи я пирипутал как всегда, эта специалисты, а должны быть заказы
            %div{:class => 'right'}
              %label search articles
              %input{:type => 'text', :class => 'field small-field'}
              %input{:type => 'submit', :class => 'button', :value => 'search'}

          /Table
          %div{:class => 'table'}
            %table{:width => '100%', :border => '0', :cellspacing => '0', :cellpadding => '0'}
              %tr
                %th №
                %th ФИО
                %th Логин
                %th Специальность
                %th Статус
                %th Группы
                %th Почта
                %th Телефон
                %th Дата
                %th{:class => 'ac', :width => '110'} Действия

              - @orders.each_with_index do |value, index|

                - if index % 2 == 0
                  %tr
                - else
                  %tr{:class => 'odd'}
                    %td
                      = link_to "#{value.id}", "order/#{value.id}"
                    %td
                      %input{:type => 'text', :class => 'field small-field', :style => 'width: 100px;', :value => 'Комков Евгений Владимирович'}
                    %td
                      %input{:type => 'text', :class => 'field small-field', :style => 'width: 100px;', :value => 'panchuk35'}
                      = link_to 'пароль', '#', class: 'ico edit'
                    %td
                      %span Архитектор
                      = link_to '', '#', class: 'ico edit'

                    %td В работе
                    %td
                      %span Лютик
                      = link_to '', '#', class: 'ico edit'
                    %td
                      %input{:type => 'text', :class => 'field small-field', :style => 'width: 100px;', :value => 'test@gmail.com'}
                    %td
                      %input{:type => 'text', :class => 'field small-field', :style => 'width: 100px;', :value => '8926565655'}
                    %td 12.05.09
                    %td
                      = link_to 'Сохр.', '#', class: 'ico edit' 
                      = link_to 'Уд.', '#', class: 'ico del'
            
            /Pagging
            %div{:class => 'pagging'}
              %div{:class => 'left'} Showing 1-12 of 44
              %div{:class => 'right'}
                = link_to 'Previous', '#'
                = link_to '1', '#'
                = link_to '2', '#'
                = link_to '3', '#'
                = link_to '4', '#'
                = link_to '444', '#'
                %span ...
                = link_to 'Next', '#'
      
      %div{:class => 'cl'} &nbsp;    

/Footer 
= render partial: 'adm/menu/footer'