/Header
= render partial: 'adm/menu/header'

/Container
%input{:type => 'hidden', :id => 'group_id', :value => @id}
%div{:id => 'container'}
  %div{:class => 'shell'}

    %div{:class => 'small-nav'}
      = link_to 'Админ-панель', '/adm/orders'
      %span &gt;
      Шаблоны анкет
    
    = render partial: 'adm/menu/popups'

    /Main
    %div{:id => 'main'}
      %div{:class => 'cl'} &nbsp;
      
      /Content
      %div{:id => 'content', :style => 'width: 100%;'}
        
        /Box
        %div{:class => 'box'}

          /Box Head
          %div{:class => 'box-head'}
            %h2{:class => 'left'} Шаблоны анкет
            %div{:class => 'right'}
              /%label search articles
              /%input{:type => 'text', :class => 'field small-field'}
              /%input{:type => 'button', :class => 'button questionnaire_new', :value => 'Добавить'}

          /Table
          %div{:class => 'table'}
            %table{:width => '100%', :border => '0', :cellspacing => '0', :cellpadding => '0'}
              %tr
                %th №
                %th Название
                %th Специальность
                %th{:class => 'ac', :width => '110'} Действия

              - @questionnaires.each_with_index do |value, index|

                %tr{:class => index % 2 == 0 ? '' : 'odd'}
                  
                  %td
                    = link_to "#{value.id}", "/adm/questionnaire/#{value.id}"
                    %input{:type => 'hidden', :class => 'group_id', :value => value.id}

                  %td
                    %span{:class => 'show_input show_input_name'}
                      = link_to "#{value.name}", "/adm/questionnaire/#{value.id}"
                    %input{:type => 'text', :class => 'edit_input field small-field groupt_name', :value => value.name}

                  %td
                    - unless value.specialization.nil?
                      = I18n.t "enumerize.specialization.#{value.specialization.name}"
                    - else
                      нет

                  %td
                    %a{:class => 'ico edit edit_group', :title => 'Редактировать'} Ред.
                    %a{:class => 'ico edit set_group', :style => 'display: none;'} Сохр.
                    %a{:class => 'ico del del_group', :style => 'display: none;'} Уд.
      
      %div{:class => 'cl'} &nbsp;    

/Footer 
= render partial: 'adm/menu/footer'